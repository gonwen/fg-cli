{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "outDir": "./bin",
        "sourceMap": false,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true,
        "strictFunctionTypes": false,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*",
        "./typings/**/*"
    ],
    "exclude": [
        "node_modules",
        "bin"
    ]
}
